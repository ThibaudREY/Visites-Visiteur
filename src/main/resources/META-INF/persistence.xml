<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="ini_PU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.visites.visiteur.model.Visiteur</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/agent"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="anthonypierrat"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect" />
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.persistence.logging.level" value="INFO"/>

            <property name="toplink.jdbc.url" value="jdbc:postgresql://localhost/agent"/>
            <property name="toplink.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost/agent"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>

            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost/agent"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>

            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost/agent"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="hbm2ddl.auto" value="create"/>

        </properties>


    </persistence-unit>

</persistence>
